<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/receipt_billable_quantity"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/receipt_billable_name"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/receipt_billable_quantity"/>

    <TextView
        android:id="@+id/receipt_billable_details"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/receipt_billable_name"
        android:layout_toEndOf="@id/receipt_billable_quantity"/>

    <TextView
        android:id="@+id/receipt_billable_price_of_quantity"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAlignment="gravity"
        android:layout_toEndOf="@id/receipt_billable_name"/>
</RelativeLayout>
