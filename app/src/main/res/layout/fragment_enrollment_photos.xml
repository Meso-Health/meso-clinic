<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enrollment_photos_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <Button
        android:id="@+id/enrollment_photos_member_photo_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/enrollment_photos_member_photo" />

    <ImageView
        android:id="@+id/member_photo"
        android:contentDescription="@string/enrollment_photos_member_photo_description"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <Button
        android:id="@+id/enrollment_photos_id_photo_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/enrollment_photos_id_photo" />

    <ImageView
        android:id="@+id/id_photo"
        android:contentDescription="@string/enrollment_photos_id_photo_description"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/enrollment_photos_save_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/enrollment_photos_save" />
    </RelativeLayout>
</LinearLayout>
