<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="presentingConditionsViewModel" type="org.watsi.uhp.view_models.PresentingConditionsViewModel"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="@{(view)->presentingConditionsViewModel.onCheckedFever(view)}"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >

                <LinearLayout
                    android:id="@+id/fever_wrapper"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fever"
                        android:theme="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fever"/>

                    <TextView
                        android:id="@+id/fever_question"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text="Does the treatment form say the patient has a fever?"
                        />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/fever_checkbox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:checked="@{presentingConditionsViewModel.hasFever}"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/fever_wrapper"
                    />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom">

            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/PrimaryButton"
                android:text="@string/continue_encounter_button" />
        </LinearLayout>
    </LinearLayout>
</layout>