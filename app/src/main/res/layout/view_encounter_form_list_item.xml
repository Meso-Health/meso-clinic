<?xml version="1.0" encoding="utf-8"?>
<org.watsi.uhp.views.EncounterFormListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/space12"
    android:paddingBottom="@dimen/space12"
    android:paddingStart="@dimen/space16"
    android:paddingEnd="@dimen/space16">

    <ImageView
        android:id="@+id/encounter_form_photo"
        android:layout_width="@dimen/thumbnailMedium"
        android:layout_height="@dimen/thumbnailMedium"
        android:contentDescription="@string/photo_description"
        android:background="@drawable/thumbnail_photo_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/remove_encounter_form_btn"
        android:layout_width="@dimen/space24"
        android:layout_height="@dimen/space24"
        android:background="@drawable/ic_clear_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</org.watsi.uhp.views.EncounterFormListItem>
