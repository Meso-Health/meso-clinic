<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/member_photo"
        android:contentDescription="@string/photo_description"
        android:adjustViewBounds="true"
        android:paddingStart="0dp"
        android:paddingEnd="14dp"
        android:layout_width="@dimen/item_member_list_photo_width"
        android:layout_height="@dimen/item_member_list_photo_height" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/member_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_name" />

    <TextView
        android:id="@+id/member_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_age" />

    <TextView
        android:id="@+id/member_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_gender" />

    <TextView
        android:id="@+id/member_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_card_id" />

    <TextView
        android:id="@+id/member_clinic_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
