<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    android:layout_marginBottom="@dimen/fragment_vertical_margin"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <Button
        android:id="@+id/photo_btn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/SecondaryButton"
        android:text="@string/photo_btn_label" />

    <ImageView
        android:id="@+id/photo"
        android:contentDescription="@string/photo_description"
        android:layout_height="360dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/fragment_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <Button
            android:id="@+id/add_another_button"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:theme="@style/SecondaryButton"
            android:text="@string/add_another_label"
            android:enabled="false" />

        <Button
            android:id="@+id/finish_button"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/PrimaryButton"
            android:text="@string/finish_btn_label" />
    </LinearLayout>
</LinearLayout>
