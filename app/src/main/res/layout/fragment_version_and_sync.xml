<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/version_and_sync_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/stats_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/version_number_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:labelFor="@+id/version_number"/>

            <TextView
                android:id="@+id/version_number"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/fetch_members_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fetch_members_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/fetch_members_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/fetch_billables_label"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/fetch_billables_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/fetch_billables_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/fetch_member_pictures_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fetch_member_pictures_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/fetch_member_pictures_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/sync_edited_members_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_edited_members_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/sync_edited_members_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/sync_new_members_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_new_members_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/sync_new_members_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/sync_id_events_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_id_events_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/sync_id_events_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/sync_encounters_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_encounters_label"
                android:textSize="16sp"
                android:textColor="@color/title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/sync_encounters_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/subtitle"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="18dp"/>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/refresh_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_alignBottom="@id/stats_scrollview"
        android:layout_alignEnd="@id/stats_scrollview"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_autorenew_white_24dp"
        android:clickable="true"
        app:backgroundTint="@color/beige"/>

</RelativeLayout>
