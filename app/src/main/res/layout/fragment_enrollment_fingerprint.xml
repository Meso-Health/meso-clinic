<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enrollment_fingerprint_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    android:layout_marginBottom="@dimen/fragment_vertical_margin"
    android:layout_marginLeft="@dimen/fragment_horizontal_margin"
    android:layout_marginRight="@dimen/fragment_horizontal_margin"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <Button
        android:id="@+id/enrollment_fingerprint_capture_btn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/SecondaryButton"
        android:text="@string/enrollment_fingerprint_button" />

    <TextView
        android:id="@+id/enrollment_fingerprint_success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/enrollment_fingerprint_simprints_succeeded"
        android:visibility="gone" />

    <TextView
        android:id="@+id/enrollment_fingerprint_failed_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/enrollment_fingerprint_simprints_failed"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/save_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/PrimaryButton"
            android:text="@string/enrollment_complete_btn" />
    </RelativeLayout>
</LinearLayout>
