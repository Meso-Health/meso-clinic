<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/encounter_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    
            <!--hacky method to add box around spinner without rewriting material design styles-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/view_outline_rectangle"
                android:layout_marginTop="@dimen/spinner_vertical_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin" >
    
                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp" />
            </RelativeLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spinner_vertical_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:background="@drawable/view_outline_rectangle" >
    
                <Spinner
                    android:id="@+id/billable_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone" />
    
                <SearchView
                    android:id="@+id/drug_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:iconifiedByDefault="false"
                    android:queryHint="@string/search_drug_hint"
                    android:inputType="textFilter"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:layout_marginBottom="@dimen/fragment_vertical_margin"
            android:layout_marginLeft="@dimen/fragment_horizontal_margin"
            android:layout_marginRight="@dimen/fragment_horizontal_margin"
            android:gravity="bottom" >
    
            <TextView
                android:id="@+id/backdate_encounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/backdate"
                android:clickable="true"/>
    
            <TextView
                android:id="@+id/add_billable_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/add_billable_prompt"
                android:clickable="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />
    
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/encounter_product_list_label"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:layout_marginLeft="@dimen/fragment_horizontal_margin"
            android:layout_marginRight="@dimen/fragment_horizontal_margin" />
    </LinearLayout>

    <ListView
        android:id="@+id/line_items_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.95"
        android:layout_marginLeft="@dimen/fragment_horizontal_margin"
        android:layout_marginRight="@dimen/fragment_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/PrimaryButton"
            android:text="@string/continue_encounter_button" />
    </LinearLayout>
</LinearLayout>
