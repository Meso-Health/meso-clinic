<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/member_photo"
        android:contentDescription="@string/member_photo_content_description"
        android:layout_width="@dimen/detail_fragment_photo_width"
        android:layout_height="@dimen/detail_fragment_photo_height"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo" />

    <TextView
        android:id="@+id/member_gender_and_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_name" />

    <TextView
        android:id="@+id/member_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_gender_and_age" />

    <TextView
        android:id="@+id/member_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_card_id" />

    <TextView
        android:id="@+id/member_notification"
        android:textStyle="bold"
        android:textColor="@color/alert_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_toEndOf="@id/member_photo"
        android:layout_below="@id/member_phone_number" />

    <Button
        android:id="@+id/approve_identity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/approve_identity"
        android:layout_below="@id/member_photo" />

    <TextView
        android:id="@+id/reject_identity"
        android:layout_height="wrap_content"
        android:layout_width="95dp"
        android:text="@string/reject_identity"
        android:onClick="onClick"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="5dp"
        android:layout_below="@id/approve_identity"/>

    <View
        android:id="@+id/detail_fragment_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/colorPrimary"
        android:layout_below="@id/reject_identity" />

    <TextView
        android:id="@+id/household_members_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/household_label"
        android:layout_below="@id/detail_fragment_divider"/>

    <ListView
        android:id="@+id/household_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_below="@id/household_members_label"/>

</RelativeLayout>
