<resources>
    <!-- Base application theme. -->
    <style name="mainTheme" parent="Theme.AppCompat.Light">
        <!-- Color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>

        <!-- Toolbar styles -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="Label" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray6</item>
        <item name="android:textSize">@dimen/fontSize12</item>
    </style>

    <style name="LargeLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="PanelHeader">
        <item name="android:textColor">@color/gray8</item>
        <item name="android:textSize">@dimen/fontSize14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="StatusKey">
        <item name="android:textSize">@dimen/fontSize16</item>
    </style>

    <style name="StatusValue">
        <item name="android:textColor">@color/gray6</item>
        <item name="android:textSize">@dimen/fontSize14</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Title -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Subtitle and icons -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Menu items -->
        <item name="android:textColor">@color/title</item>
    </style>
</resources>
