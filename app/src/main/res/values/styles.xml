<resources>
    <!-- Base styling -->
    <style name="mainTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>

        <item name="android:windowBackground">@color/gray1</item>

        <item name="android:textColor">@color/gray9</item>
        <item name="android:textColorHint">@color/gray6</item>

        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Toolbar styles -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Text styling -->

    <style name="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray9</item>
    </style>

    <style name="Label" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray6</item>
        <item name="android:textSize">@dimen/fontSize12</item>
    </style>

    <style name="LargeLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PanelHeader">
        <item name="android:textColor">@color/gray8</item>
        <item name="android:textSize">@dimen/fontSize14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="StatusKey">
        <item name="android:textSize">@dimen/fontSize16</item>
    </style>

    <style name="StatusValue">
        <item name="android:textColor">@color/gray6</item>
        <item name="android:textSize">@dimen/fontSize14</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Title -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Subtitle and icons -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Menu items -->
        <item name="android:textColor">@color/gray9</item>
    </style>

    <!-- Button styling -->

    <style name="FlatButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/fontSize16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RaisedButtonBase" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray9</item>
        <item name="android:textSize">@dimen/fontSize16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PrimaryButton" parent="RaisedButtonBase">
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton" parent="RaisedButtonBase">
        <item name="android:background">@drawable/button_secondary_selector</item>
    </style>

    <!-- Component styling -->

    <style name="AlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonStyle">@style/FlatButtonStyle</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/fontSize16</item>
        <item name="android:backgroundTint">@color/gray4</item>
        <item name="android:drawableTint">@color/gray6</item>
    </style>

</resources>
