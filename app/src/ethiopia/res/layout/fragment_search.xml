<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/space24"
    android:background="@color/white">

    <TextView
        android:id="@+id/cbhi_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space16"
        android:paddingEnd="@dimen/space16"
        android:text="@string/cbhi_id_label"
        style="@style/Label"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/membership_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space16"
        android:paddingEnd="@dimen/space8"
        app:layout_constraintTop_toBottomOf="@+id/cbhi_id_label">

        <LinearLayout
            android:id="@+id/membership_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/membership_number_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space12"
                android:src="@drawable/ic_member_id" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/region_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:layout_marginStart="@dimen/space12"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/woreda_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/kebele_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <org.watsi.uhp.views.SpinnerField
                android:id="@+id/member_status"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/household_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/six_zeroes_placeholder"
                android:maxLength="6"
                android:imeOptions="actionNext"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/household_member_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionDone"
                android:maxLength="2"
                android:selectAllOnFocus="true" />
        </LinearLayout>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/search_button"
        android:text="@string/search"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/space16"
        android:layout_marginEnd="@dimen/space16"
        android:layout_marginBottom="@dimen/space16"
        style="@style/PrimaryButton"
        app:layout_constraintBottom_toTopOf="@+id/border"/>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space4"
        android:background="@color/gray4"
        app:layout_constraintBottom_toTopOf="@+id/search_methods_container"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_methods_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space8"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/cbhi_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:drawableTop="@drawable/ic_perm_contact_calendar_grey_24dp"
            android:text="@string/search_cbhi_id_label"
            android:textColor="@color/gray6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toStartOf="@id/scan_card_button"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/scan_card_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_qr_code_grey_24dp"
            android:textAlignment="center"
            android:text="@string/scan_card"
            android:textColor="@color/gray6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_by_name_button"
            app:layout_constraintStart_toEndOf="@+id/cbhi_button" />

        <TextView
            android:id="@+id/search_by_name_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_search_grey_24dp"
            android:textAlignment="center"
            android:text="@string/search_name"
            android:textColor="@color/gray6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scan_card_button"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
