<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/space16"
        android:paddingBottom="@dimen/space16">

        <TextView
            android:id="@+id/status_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/fragment_padding"
            android:text="@string/status_title"
            style="@style/PanelHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <org.watsi.uhp.views.StatusField
            android:id="@+id/current_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space8"
            android:text="@string/current_user_label"
            app:layout_constraintTop_toBottomOf="@id/status_header" />

        <org.watsi.uhp.views.StatusField
            android:id="@+id/fetch_members_updated_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/fetch_members_label"
            app:layout_constraintTop_toBottomOf="@id/current_user"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/fetch_billables_updated_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/fetch_billables_label"
            app:layout_constraintTop_toBottomOf="@id/fetch_members_updated_at"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/fetch_diagnoses_updated_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/fetch_diagnoses_label"
            app:layout_constraintTop_toBottomOf="@id/fetch_billables_updated_at"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unfetched_member_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/fetch_member_pictures_label"
            app:layout_constraintTop_toBottomOf="@id/fetch_diagnoses_updated_at"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_new_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/sync_new_members_label"
            app:layout_constraintTop_toBottomOf="@id/unfetched_member_photos"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_identifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/sync_id_events_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_new_members"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_encounters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/sync_claims_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_identifications"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_field_margin"
            android:text="@string/sync_photos_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_encounters"/>

        <TextView
            android:id="@+id/app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space24"
            android:paddingStart="@dimen/fragment_padding"
            android:paddingEnd="@dimen/fragment_padding"
            style="@style/StatusVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/unsynced_photos" />

        <TextView
            android:id="@+id/android_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space4"
            android:paddingStart="@dimen/fragment_padding"
            android:paddingEnd="@dimen/fragment_padding"
            style="@style/StatusVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_version" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
