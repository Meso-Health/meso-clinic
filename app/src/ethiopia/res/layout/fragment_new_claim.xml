<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/space24"
    android:background="@color/white">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/membership_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space16"
        android:paddingRight="@dimen/space8"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/membership_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/membership_number_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space12"
                android:src="@drawable/ic_member_id" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/region_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:layout_marginStart="@dimen/space12"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/woreda_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/kebele_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <org.watsi.uhp.views.SpinnerField
                android:id="@+id/member_status"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/household_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/six_zeroes_placeholder"
                android:maxLength="6"
                android:imeOptions="actionNext"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginEnd="@dimen/space4" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/household_member_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/two_zeroes_placeholder"
                android:imeOptions="actionDone"
                android:maxLength="2"
                android:selectAllOnFocus="true" />
        </LinearLayout>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/save_button_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space16"
            style="@style/PrimaryButton"
            app:layout_behavior="org.watsi.uhp.behaviors.MovableButtonBehavior"
            android:text="@string/start_claim_button"
            android:layout_gravity="bottom" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
