<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space16"
    android:paddingRight="@dimen/space16"
    android:paddingTop="@dimen/space24"
    android:paddingBottom="@dimen/space24"
    android:background="@color/white">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/membership_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/membership_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/membership_number_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_member_id" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/region_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="00"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:layout_marginLeft="14dp"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/woreda_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="00"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/kebele_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="00"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <org.watsi.uhp.views.SpinnerField
                android:id="@+id/member_status"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/household_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="000"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/slash"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/household_member_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="0"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:selectAllOnFocus="true" />
        </LinearLayout>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/start_button"
        style="@style/PrimaryButton"
        android:text="@string/start_claim_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space16"
        android:layout_marginLeft="@dimen/space16"
        android:layout_marginTop="@dimen/space16"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
