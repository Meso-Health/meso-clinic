<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <org.watsi.uhp.views.StatusField
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/version_label"
            app:layout_constraintTop_toTopOf="parent"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/fetch_members_updated_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_members_label"
            app:layout_constraintTop_toBottomOf="@id/version"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/fetch_billables_updated_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_billables_label"
            app:layout_constraintTop_toBottomOf="@id/fetch_members_updated_at"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/fetch_diagnoses_updated_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_diagnoses_label"
            app:layout_constraintTop_toBottomOf="@id/fetch_billables_updated_at"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unfetched_member_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_member_pictures_label"
            app:layout_constraintTop_toBottomOf="@id/fetch_diagnoses_updated_at"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_new_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_new_members_label"
            app:layout_constraintTop_toBottomOf="@id/unfetched_member_photos"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_edited_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_edited_members_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_new_members"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_identifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_id_events_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_edited_members"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_encounters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_claims_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_identifications"/>

        <org.watsi.uhp.views.StatusField
            android:id="@+id/unsynced_treatment_forms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_encounter_forms_label"
            app:layout_constraintTop_toBottomOf="@id/unsynced_encounters"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
